  </div>
  <div id="map"></div>
  <script>
    var HttpClient = function() {
        this.get = function(aUrl, aCallback) {
            var anHttpRequest = new XMLHttpRequest();
            anHttpRequest.onreadystatechange = function() {
                if (anHttpRequest.readyState == 4 && anHttpRequest.status == 200)
                    aCallback(anHttpRequest.responseText);
            }

            anHttpRequest.open( "GET", aUrl, true );
            anHttpRequest.send( null );
        }
    }


    async function initMap() {
      var client = new HttpClient();
      client.get(`https://sheets.googleapis.com/v4/spreadsheets/1C2zd50u_7bmBsSkBEHG87Eakjgu01x7-m6ktFKxnuF8/values/Sheet1!A1:D5?key=<%- process.env.GOOGLE_MAPS_KEY %>`, function(response) {
        const res = JSON.parse(response)
        var markers = []

        res.values.forEach((value, idx) => {
          if (idx !== 0) {
            markers.push({
              lat: parseFloat(value[0]),
              lng: parseFloat(value[1])
            })
          }
        })


        var uluru = {lat: 49.3003431,	lng: -123.0823739};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 12,
          center: uluru
        });

        for(var ix = 0; ix < markers.length; ix++) {
          new google.maps.Marker({
            position: markers[ix],
            map: map
          });
        }
      })
    }
  </script>
</div>

</body>
</html>
